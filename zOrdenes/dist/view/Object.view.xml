<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.uxap"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:forms="sap.ui.layout.form"
    height="100%"
    controllerName="zOrdenes.controller.Object"
>
    <ObjectPageLayout
        id="ObjectPageLayout"
        upperCaseAnchorBar="true"
    >
        <headerTitle>
            <ObjectPageDynamicHeaderTitle
                id="_IDGenObjectPageDynamicHeaderTitle1"
            >
                <expandedHeading>
                    <m:Title
                        id="_IDGenTitle2"
                        text="Orden: {pedidoModel>/NoPedido}"
                    />
                </expandedHeading>

                <snappedHeading>
                    <m:HBox id="_IDGenHBox">
                        <m:VBox id="_IDGenVBox">
                            <m:Title
                                id="_IDGenTitle3"
                                text="Orden: {pedidoModel>/NoPedido}"
                            />
                            <m:Label
                                id="_IDGenLabel"
                                text="{pedidoModel>/NombreProveedor}"
                            />
                        </m:VBox>
                    </m:HBox>
                </snappedHeading>

                <expandedContent>
                    <m:Label
                        id="_IDGenLabel1"
                        text="{pedidoModel>/NombreProveedor}"
                    />
                </expandedContent>

                <snappedTitleOnMobile>
                    <m:Title
                        id="_IDGenTitle4"
                        text="Orden: {pedidoModel>/NoPedido}"
                    />
                </snappedTitleOnMobile>
            </ObjectPageDynamicHeaderTitle>
        </headerTitle>

        <headerContent>
            <m:FlexBox
                id="_IDGenFlexBox"
                wrap="Wrap"
                fitContainer="true"
            >
                <m:VBox
                    id="_IDGenVBox2"
                    class="sapUiLargeMarginEnd sapUiSmallMarginBottom"
                >
                    <m:Title
                        id="_IDGenTitle5"
                        text="Solicitante"
                        class="sapUiTinyMarginBottom"
                    />
                    <m:ObjectStatus
                        id="_IDGenObjectStatus"
                        text="{pedidoModel>/Solicitante}"
                        class="sapMObjectStatusLarge"
                    />
                </m:VBox>

                <m:VBox
                    id="_IDGenVBox3"
                    class="sapUiLargeMarginEnd sapUiSmallMarginBottom"
                    visible="true"
                >
                    <m:Title
                        id="_IDGenTitle6"
                        text="Fecha de entrega"
                        class="sapUiTinyMarginBottom"
                    />
                    <m:ObjectStatus
                        id="_IDGenObjectStatus1"
                        text="{pedidoModel>/Fechadeentrega}"
                        icon="sap-icon://shipping-status"
                        class="sapMObjectStatusLarge"
                    />
                </m:VBox>

                <m:VBox
                    id="_IDGenVBox5"
                    class="sapUiLargeMarginEnd"
                >
                    <m:Title
                        id="_IDGenTitle8"
                        text="Monto"
                        class="sapUiTinyMarginBottom"
                    />
                    <m:ObjectNumber
                        id="_IDGenObjectNumber"
                        number="$ {path:'pedidoModel>/Total', formatter:'.currencyFormat'}"
                        unit="MXN"
                        emphasized="false"
                        class="sapMObjectNumberLarge"
                        state="Success"
                    />
                </m:VBox>
            </m:FlexBox>
        </headerContent>

        <sections>
            <ObjectPageSection
                id="_IDGenObjectPageSection"
                titleUppercase="false"
                title="General Information"
            >
                <subSections>
                    <ObjectPageSubSection
                        id="_IDGenObjectPageSubSection"
                        title="Order Details"
                        showTitle="false"
                    >
                        <blocks>
                            <m:Table
                                items="{pedidoModel>/Posiciones}"
                                width="auto"
                            >
                                <m:columns>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="{i18n>NoPosicion}" />
                                    </m:Column>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="{i18n>id}" />
                                    </m:Column>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="{i18n>descripcion}" />
                                    </m:Column>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="{i18n>cantidad}" />
                                    </m:Column>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="{i18n>unidaddemedida}" />
                                    </m:Column>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="{i18n>precio}" />
                                    </m:Column>
                                    <m:Column
                                        minScreenWidth="Tablet"
                                        demandPopin="true"
                                    >
                                        <m:Text text="{i18n>moneda}" />
                                    </m:Column>
                                </m:columns>
                                <m:items>
                                    <m:ColumnListItem>
                                        <m:cells>
                                            <m:Text
                                                text="{pedidoModel>NumdePosicion}"
                                            />
                                        </m:cells>
                                        <m:cells>
                                            <m:Text
                                                text="{pedidoModel>Idmaterial}"
                                            />
                                        </m:cells>
                                        <m:cells>
                                            <m:Text
                                                text="{pedidoModel>DescripciÃ³n}"
                                            />
                                        </m:cells>
                                        <m:cells>
                                            <m:Text
                                                text="{pedidoModel>Cantidad}"
                                            />
                                        </m:cells>
                                        <m:cells>
                                            <m:Text
                                                text="{pedidoModel>Unidaddemedida}"
                                            />
                                        </m:cells>
                                        <m:cells>
                                            <m:Text
                                                text="{pedidoModel>Precio}"
                                            />
                                        </m:cells>
                                        <m:cells>
                                            <m:Text
                                                text="{pedidoModel>Moneda}"
                                            />
                                        </m:cells>
                                    </m:ColumnListItem>
                                </m:items>
                            </m:Table>
                        </blocks>
                    </ObjectPageSubSection>
                </subSections>
            </ObjectPageSection>
        </sections>
    </ObjectPageLayout>
</mvc:View>
